class Tarif:
    def __init__(self, number, name, summery):
        self.number = number
        self.name = name
        self.summery = summery

    def call(self):
        return f'This number: {self.number}, can call but with restriction'

    def __str__(self):
        return f'Name: {self.name}\n' \
               f'Number: {self.number}\n' \
               f'summary: {self.summery}'


